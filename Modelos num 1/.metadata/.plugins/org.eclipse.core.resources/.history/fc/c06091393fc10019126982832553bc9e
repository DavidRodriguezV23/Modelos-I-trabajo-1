package logica;

import javax.swing.ImageIcon;
import javax.swing.JOptionPane;

import vista.DetallesAuto;
import vista.Menu;

public class Liskov {

	//Metodo Liskov
	public static Automovil crearAutomovil(int caso) {
		DetallesAuto imagen;
		switch (caso){
			case 1://SparkGT
				imagen.lblImagen.setIcon(new ImageIcon(DetallesAuto.class.getResource("/recursos/arrancar.png")));
				return new SparkGT();
			case 2:
				return new Renault4();
			case 3:
				return new NissanZ370();
			default:
				JOptionPane.showMessageDialog(null, "Fallo al crear el automovil.");
				return null;
		}
	}
		
}
